<h1 class="mb-3 text-center">Hello <span style="font-weight: bold; color: rgb(13,109,250); text-transform: capitalize;"><%= userName %></span>ðŸ‘‹</h1>

<div class="mb-4 d-flex justify-content-end gap-4">
  <a class="btn btn-outline-secondary" href="/products/create" role="button">New product</a>
  <a class="btn btn-outline-secondary" href="/products?delete=true" role="button">Delete product</a>
</div>

<div class="container" style=" display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem;">
  <% userProducts.forEach(product => { %>
  <div class="product d-flex flex-column justify-content-between" style="overflow: hidden; border-radius: 0.5rem; box-shadow: 0 1.5rem 4rem rgba(0, 0, 0, 0.1); background-color: #fff;">
    <div class="product__header">
      <div class=" product__picture" style=" height: 10rem; position: relative;">
        <img src="img/<%= product.image %>" alt="<%= product.image %>" class="product__picture-img" style="object-fit: cover;height: 100%; width: 100%;">
      </div>
      <h3 class="product__title mt-2" style="padding: 0 1rem; text-align: center;font-size: 1.5; text-transform: uppercase; font-weight: bold;"><%= product.name %></h3>
    </div>
    <div class="product__detail" style="padding: 0 1rem;">
      <div class="d-flex justify-content-center gap-2">
        <% product.tags.forEach(element => { %>
        <a style="text-decoration: none;" href="#">#<%= element %></a>
        <% }); %>
      </div>
      <p class="product__description mt-3" style="font-size: 1.2rem; font-style: italic;"><%= product.description %></p>
    </div>
    <div class="product__footer d-flex justify-content-between" style="padding: 0 1rem;">
      <p class="product__price" style="font-size: 1.2rem; font-weight: bold;">&#8364 <%= product.price %></p>
      <% if (isDeleteMode) { %>
      <a class="product__delete" href="/products/delete/<%= product._id %>"><i class="bi bi-trash3"></i></a>
      <% } %>
    </div>
  </div>
  <% }); %>
</div>